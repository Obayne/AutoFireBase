{
    "name": "Professional Python Development",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/devcontainers/features/docker-in-docker:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "eamodio.gitlens",
                "github.vscode-pull-request-github",
                "Continue.continue",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "ms-vscode.vscode-json",
                "redhat.vscode-yaml",
                "ms-vscode.powershell",
                "ms-vscode-remote.remote-containers",
                "ms-vscode-remote.remote-ssh",
                "ms-vscode.vscode-typescript-next",
                "bradlc.vscode-tailwindcss",
                "esbenp.prettier-vscode",
                "ms-vscode.vscode-eslint",
                "ms-vscode.test-adapter-converter",
                "hbenl.vscode-test-explorer",
                "littlefoxteam.vscode-python-test-adapter",
                "ms-python.pylint",
                "ms-python.black-formatter",
                "charliermarsh.ruff",
                "ms-python.mypy-type-checker",
                "ms-vscode.vscode-markdown-notebook",
                "ms-toolsai.vscode-jupyter-powertoys",
                "ms-vscode.remote-repositories",
                "GitHub.vscode-github-actions",
                "ms-vscode.vscode-docker",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "files.autoSave": "afterDelay",
                "files.autoSaveDelay": 500,
                "editor.formatOnSave": true,
                "editor.formatOnPaste": true,
                "editor.formatOnType": true,
                "editor.codeActionsOnSave": {
                    "source.fixAll": "explicit",
                    "source.organizeImports": "explicit"
                },
                "python.formatting.provider": "black",
                "python.linting.enabled": true,
                "python.linting.ruffEnabled": true,
                "python.linting.mypyEnabled": true,
                "python.testing.pytestEnabled": true,
                "python.testing.pytestArgs": ["tests"],
                "git.autofetch": true,
                "git.confirmSync": false,
                "git.enableSmartCommit": true,
                "git.autorefresh": true,
                "terminal.integrated.shell.linux": "/bin/bash",
                "task.autoDetect": "on",
                "task.quickOpen.detail": true,
                "task.quickOpen.skip": false,
                "workbench.editor.enablePreview": false,
                "explorer.confirmDelete": false,
                "explorer.confirmDragAndDrop": false,
                "window.autoDetectColorScheme": true,
                "editor.minimap.enabled": false,
                "editor.wordWrap": "on",
                "editor.renderWhitespace": "boundary",
                "editor.bracketPairColorization.enabled": true,
                "editor.guides.bracketPairs": true,
                "python.defaultInterpreterPath": "./.venv/bin/python",
                "python.terminal.activateEnvInCurrentTerminal": true,
                "python.createEnvironment.contentButton": "show",
                "ruff.enable": true,
                "ruff.organizeImports": true,
                "ruff.fixAll": true,
                "mypy.runUsingActiveInterpreter": true,
                "black-formatter.args": ["--line-length=100"],
                "testExplorer.addToEditorContextMenu": true,
                "testExplorer.showOnRun": true,
                "testExplorer.mergeSuites": true,
                "testExplorer.sort": "byLocation",
                "testExplorer.errorDecoration": true,
                "testExplorer.infoDecoration": true,
                "continue.enableContinueFor": ["python", "javascript", "typescript", "markdown"],
                "continue.showInlineTips": true,
                "continue.enableQuickActions": true,
                "github.copilot.enable": {
                    "*": true,
                    "plaintext": false,
                    "markdown": false,
                    "scminput": false
                },
                "gitlens.currentLine.enabled": false,
                "gitlens.hovers.currentLine.over": "line",
                "gitlens.hovers.enabled": false,
                "gitlens.codeLens.enabled": false,
                "gitlens.statusBar.enabled": false,
                "gitlens.menus": {
                    "editor": false,
                    "editorGroup": false,
                    "editorTab": false,
                    "explorer": false
                }
            }
        }
    },
    "postCreateCommand": "bash .devcontainer/post-create.sh",
    "forwardPorts": [8000, 3000],
    "portsAttributes": {
        "8000": {
            "label": "FastAPI/Flask App",
            "onAutoForward": "notify"
        },
        "3000": {
            "label": "Web Application",
            "onAutoForward": "silent"
        }
    },
    "remoteUser": "vscode"
}
